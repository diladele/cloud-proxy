[Unit]
Description=Update /etc/issue file for Cloud Proxy virtual appliance after network is up
Wants=network-online.target
After=network-online.target

[Service]
Type=oneshot
ExecStart=/opt/cloud-proxy-admin/bin/va_issue.sh
StandardOutput=file:/etc/issue
RemainAfterExit=true

[Install]
WantedBy=multi-user.target
